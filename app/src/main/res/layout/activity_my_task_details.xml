<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#009088">

        <Button
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:text="返回"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="任务进程"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/title_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#00000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_address"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[交接地点]"
                android:textSize="15dp"
                android:textColor="#989898"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/get_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:background="#989898"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/text11"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_time_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:layout_marginTop="1dp">
        <Button
            android:id="@+id/to_payoff"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="确认支付"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/to_wait_finish"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="等待完成中"
            android:textSize="15dp"
            android:textColor="@color/btn"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/to_finish"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="确认完成"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/to_wait_pay"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="等待支付中"
            android:textSize="15dp"
            android:textColor="@color/btn"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/to_close"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="任务已结束"
            android:textSize="15dp"
            android:textColor="@color/btn"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/task_details1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务详情"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/task_details2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details1"
            android:layout_marginLeft="50dp"
            android:text="发起人："
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/task_details3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/task_details2"
            android:layout_below="@id/task_details1"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/task_details4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/task_details3"
            android:layout_below="@id/task_details1"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/task_details5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="任务分区："
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/task_details6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details2"
            android:layout_toEndOf="@id/task_details5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/task_details7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details2"
            android:layout_toEndOf="@id/task_details6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/task_details_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="截止时间："
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/task_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details6"
            android:layout_toEndOf="@id/task_details_title_time"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/task_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details6"
            android:layout_toEndOf="@id/task_details_date"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/task_details_title_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details_title_time"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="报酬："
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/task_details_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details_title_time"
            android:layout_toEndOf="@id/task_details_title_payment"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/task_details_title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details_title_payment"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="任务描述："
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/task_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_details_title_description"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            android:maxLines="5"
            android:textSize="15sp"/>

    </RelativeLayout>
</LinearLayout>