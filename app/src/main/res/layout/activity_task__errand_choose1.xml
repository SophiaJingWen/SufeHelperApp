<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Task_ErrandChoose1Activity">

    <include layout="@layout/common_toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/choose1Card1"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:backgroundTint="@color/LightCyan"
        android:layout_marginStart="2dp"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="筛选"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_choose1"
        android:layout_below="@id/choose1Card1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <android.support.v7.widget.CardView
        android:id="@+id/choose1Card2"
        android:layout_width="match_parent"
        android:layout_below="@+id/recycler_view_choose1"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:backgroundTint="@color/LightCyan"
        android:layout_marginStart="2dp"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="任务"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_choose2"
        android:layout_below="@id/choose1Card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <include layout="@layout/common_bottom_navigation_bar"/>


</RelativeLayout>

