<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/register_title_layout"/>

    <TextView
        android:id="@+id/text14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="常用地址"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_line"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text14"/>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校区："
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/text14"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp"/>

        <Spinner
            android:id="@+id/spinner_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title1"
            android:entries="@array/area"
            android:singleLine="true"
            android:layout_below="@id/text14"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"></Spinner>

        <TextView
            android:id="@+id/title2"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寝室名称："
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/title1"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/dormname"
            android:layout_width="200dp"
            android:layout_toRightOf="@id/title2"
            android:layout_height="wrap_content"
            android:hint="静思园12号楼"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/title1"
            android:background="@drawable/edit_style"/>
    <Button
        android:id="@+id/button_confirm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:text="确认"
        android:textColor="@color/white"
        android:background="@drawable/confirm_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="○  ○  ●  ○  ○"
        android:textSize="10dp"
        android:textColor="#909090"
        android:background="#00000000"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>



