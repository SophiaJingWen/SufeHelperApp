<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/register_title_layout"/>
        <ImageView
            android:id="@+id/picture_upload"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/picture"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="90dp" />
        <Button
            android:id="@+id/bottom_choose_from_album"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="上传头像"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/btn_normal"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/picture_upload"
            android:layout_alignBottom="@id/picture_upload"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称："
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:id="@+id/text12"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/picture_upload"/>
        <EditText
            android:id="@+id/register2_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="建议输入真实姓名"
            android:background="@drawable/edit_style"
            android:layout_below="@id/picture_upload"
            android:layout_toRightOf="@+id/text12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/register2_name"
            android:layout_marginLeft="50dp"
            android:id="@+id/text14">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="性别："
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"/>
            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:id="@+id/rb_Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="18dp"
                    android:textColor="#A8A8A8"/>

                <RadioButton
                    android:id="@+id/rb_FeMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#A8A8A8"/>
            </RadioGroup>
        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text13"
        android:text="密码："
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/text14"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="35dp"/>

    <EditText
        android:id="@+id/register2_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_style"
        android:layout_toRightOf="@+id/text13"
        android:layout_below="@id/text14"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/button_8"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/confirm_button"/>
    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="○  ●  ○  ○"
        android:textSize="10dp"
        android:textColor="#909090"
        android:background="#00000000"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>


