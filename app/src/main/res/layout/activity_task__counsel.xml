<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task_CounselActivity">

    <include layout="@layout/common_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <include layout="@layout/common_bottom_navigation_bar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/counselCard1"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:backgroundTint="@color/LightCyan"
        android:layout_marginStart="2dp"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="咨询分区"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/counselCard2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/counselCard1"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="false"
        android:layout_marginStart="2dp"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/counsel_ic1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/apple"/>
            <TextView
                android:id="@+id/counsel_tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选课指南"
                android:layout_below="@id/counsel_ic1"
                android:layout_marginStart="45dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/counsel_ic2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banana"/>
            <TextView
                android:id="@+id/counsel_tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考研出国咨询"
                android:layout_below="@id/counsel_ic2"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/counsel_ic3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/orange"/>
            <TextView
                android:id="@+id/counsel_tx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="求职咨询"
                android:layout_below="@id/counsel_ic3"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:textSize="16sp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/counsel_ic4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@id/counsel_tx1"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/apple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="票务转让"
                android:layout_below="@id/counsel_ic4"
                android:layout_marginStart="45dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/counsel_ic5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@id/counsel_tx2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banana"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二手闲置"
                android:layout_below="@id/counsel_ic5"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/counsel_ic6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:layout_below="@id/counsel_tx3"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:layout_below="@id/counsel_ic6"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="62dp"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btn_select_counsel"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_below="@id/counsel_ic6"
                android:layout_marginTop="25dp"
                android:layout_marginStart="55dp"
                android:background="#00000000"
                android:layout_toEndOf="@id/counsel_ic5"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:text="进入筛选 >"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/counselCard3"
        android:layout_width="match_parent"
        android:layout_below="@+id/counselCard2"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:backgroundTint="@color/LightCyan"
        android:layout_marginStart="2dp"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="为你推荐"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_counsel"
        android:layout_below="@id/counselCard3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


</RelativeLayout>
