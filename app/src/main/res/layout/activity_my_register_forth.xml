<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/register_title_layout"/>
    <TextView
        android:id="@+id/text16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="常见需求"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_line"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text16"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/text16"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/person2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="拿快递"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/person7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="买东西"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/person6"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/person2"/>
        <Button
            android:id="@+id/person5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二手闲置"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/person4"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/person6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子产品修理"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"
            android:layout_below="@id/person2"
            />
        <Button
            android:id="@+id/person4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家具器件组装"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="10dp"

            android:layout_toRightOf="@id/person2"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/person8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="找同好"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"
            android:layout_below="@id/person2"
            android:layout_toRightOf="@id/person7"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/person9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习作业辅导"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/person15"
            android:layout_below="@id/person6"
            />
        <Button
            android:id="@+id/person15"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="拼单"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"
            android:layout_below="@id/person6"
            />
        <Button
            android:id="@+id/person12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技能培训"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"
            android:layout_below="@id/person9"
            />
        <Button
            android:id="@+id/person10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考研出国经验"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"

            android:layout_below="@id/person6"
            android:layout_toRightOf="@id/person9"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/person13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求职经验"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"
            android:layout_below="@id/person9"
            android:layout_toRightOf="@id/person12"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/person14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票务转让"
            android:textSize="15dp"
            android:textColor="@drawable/btn_text"
            android:background="@drawable/btn_click"
            android:layout_marginTop="5dp"
            android:layout_below="@id/person9"
            android:layout_toRightOf="@id/person13"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>
    <Button
        android:id="@+id/button_confirm4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="确认"
        android:textColor="@color/white"
        android:background="@drawable/confirm_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="○  ○  ●  ○"
        android:textSize="10dp"
        android:textColor="#909090"
        android:background="#00000000"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>


