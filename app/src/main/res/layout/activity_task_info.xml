<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task_InfoActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#009088"
        android:id="@+id/LinearLayout12">

        <Button
            android:id="@+id/title_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="#00000000" />
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="任务详情"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/taskinfo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout12"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="35sp"
        android:text="iTask"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="cursive"/>

    <android.support.v7.widget.CardView
        android:id="@+id/taskinfo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskinfo_title"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/taskinfo_space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                                      "
                android:textSize="12sp"/>

        <TextView
            android:id="@+id/taskinfo_title_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskinfo_space1"
            android:layout_marginStart="8dp"
            android:text="发起人："
            android:textSize="22sp"/>

            <ImageView
                android:id="@+id/taskinfo_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toEndOf="@id/taskinfo_title_launcher"
                android:layout_below="@id/taskinfo_space1"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/taskinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/taskinfo_image"
                android:layout_below="@id/taskinfo_space1"
                android:layout_marginStart="13dp"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/taskinfo_laixnifangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_launcher"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="联系方式："
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_launcher"
                android:layout_toEndOf="@id/taskinfo_laixnifangshi"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textSize="21sp"/>


            <Button
                android:id="@+id/chakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看主页 >"
                android:textColor="#006666"
                android:layout_below="@id/taskinfo_space1"
                android:layout_toEndOf="@+id/taskinfo_image"
                android:layout_marginTop="-10dp"
                android:background="#00000000"
                android:layout_marginStart="150dp"
                android:textSize="16sp"/>

        <TextView
            android:id="@+id/taskinfo_title_taskType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskinfo_laixnifangshi"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="任务分区："
            android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_taskType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_laixnifangshi"
                android:layout_toEndOf="@id/taskinfo_title_taskType"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/taskinfo_subtaskType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_laixnifangshi"
                android:layout_toEndOf="@id/taskinfo_taskType"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textSize="21sp"/>

        <TextView
            android:id="@+id/taskinfo_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskinfo_title_taskType"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="截止时间："
            android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_taskType"
                android:layout_toEndOf="@id/taskinfo_title_time"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="21sp"/>


            <TextView
                android:id="@+id/taskinfo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_taskType"
                android:layout_toEndOf="@id/taskinfo_date"
                android:layout_marginTop="8dp"
                android:layout_marginStart="7dp"
                android:textSize="21sp"/>


            <TextView
                android:id="@+id/taskinfo_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_time"
                android:layout_toEndOf="@id/taskinfo_title_time"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="21sp"/>



        <TextView
            android:id="@+id/taskinfo_title_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskinfo_title_time"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="地点："
            android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_time"
                android:layout_toEndOf="@id/taskinfo_title_location"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/taskinfo_title_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_location"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="报酬："
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_location"
                android:layout_toEndOf="@id/taskinfo_title_payment"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/taskinfo_title_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_payment"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="任务描述："
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_description"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:maxLines="5"
                android:textStyle="italic"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/taskinfo_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_description"
                android:layout_marginStart="8dp"
                android:text="                                           "
                android:textSize="12sp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/receive_task_btn"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="接收任务 >"
        android:layout_marginBottom="100dp"/>

    <include layout="@layout/common_bottom_navigation_bar"/>

</RelativeLayout>
