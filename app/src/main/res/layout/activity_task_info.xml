<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskInfoActivity">

    <include layout="@layout/common_toolbar"/>

    <TextView
        android:id="@+id/taskinfo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:textSize="27sp"
        android:text="任务详情" />

    <android.support.v7.widget.CardView
        android:id="@+id/taskinfo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskinfo_title"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/taskinfo_space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                                      "
                android:textSize="12sp"/>

        <TextView
            android:id="@+id/taskinfo_title_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskinfo_space1"
            android:layout_marginStart="8dp"
            android:text="发起人："
            android:textSize="22sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/taskinfo_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toEndOf="@id/taskinfo_title_launcher"
                android:layout_below="@id/taskinfo_space1"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/taskinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/taskinfo_image"
                android:layout_below="@id/taskinfo_space1"
                android:layout_marginStart="10dp"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/taskinfo_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/taskinfo_name"
                android:layout_below="@id/taskinfo_space1"
                android:layout_marginStart="10dp"
                android:textSize="21sp"/>

        <TextView
            android:id="@+id/taskinfo_title_taskType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskinfo_title_launcher"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="任务分区："
            android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_taskType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_launcher"
                android:layout_toEndOf="@id/taskinfo_title_taskType"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/taskinfo_subtaskType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_launcher"
                android:layout_toEndOf="@id/taskinfo_taskType"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textSize="21sp"/>

        <TextView
            android:id="@+id/taskinfo_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskinfo_title_taskType"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="截止时间："
            android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_taskType"
                android:layout_toEndOf="@id/taskinfo_title_time"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="21sp"/>


            <TextView
                android:id="@+id/taskinfo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_taskType"
                android:layout_toEndOf="@id/taskinfo_date"
                android:layout_marginTop="8dp"
                android:layout_marginStart="7dp"
                android:textSize="21sp"/>


        <TextView
            android:id="@+id/taskinfo_title_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskinfo_title_time"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="地点："
            android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_time"
                android:layout_toEndOf="@id/taskinfo_title_location"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/taskinfo_title_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_location"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="报酬："
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_location"
                android:layout_toEndOf="@id/taskinfo_title_payment"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/taskinfo_title_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_payment"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="任务描述："
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/taskinfo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_title_description"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:textStyle="italic"
                android:maxLines="5"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/taskinfo_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskinfo_description"
                android:layout_marginStart="8dp"
                android:text="                                           "
                android:textSize="12sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/receive_task_btn"
        android:layout_below="@id/taskinfo_card"
        android:layout_centerHorizontal="true"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="接收任务 >"/>



    <include layout="@layout/common_bottom_navigation_bar"/>

</RelativeLayout>
